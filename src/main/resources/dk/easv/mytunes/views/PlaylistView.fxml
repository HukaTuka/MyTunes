<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="250.0" prefWidth="450.0" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.mytunes.gui.controller.PlaylistViewController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <children>
        <!-- Title -->
        <Label fx:id="lblTitle" text="New Playlist">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Description -->
        <Label text="Enter a name for your playlist:" />

        <!-- Name Field -->
        <VBox spacing="8">
            <Label text="Playlist Name:">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
            </Label>
            <TextField fx:id="txtName" prefHeight="35.0" promptText="Enter playlist name" />
        </VBox>

        <!-- Error Label -->
        <Label fx:id="lblError" textFill="red" visible="false" wrapText="true">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <!-- Buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" />
            </padding>
            <Button onAction="#handleSave" prefHeight="35.0" prefWidth="100.0" text="Save" />
            <Button onAction="#handleCancel" prefHeight="35.0" prefWidth="100.0" text="Cancel" />
        </HBox>
    </children>
</VBox>
