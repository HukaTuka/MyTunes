<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.mytunes.gui.controller.MyTunesViewController">

    <!-- Top Menu Bar -->
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem onAction="#btnExit" text="Exit" />
            </Menu>
            <Menu text="Help">
                <MenuItem onAction="#btnAbout" text="About" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <HBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Left Section - Playlists -->
            <VBox prefWidth="200" spacing="5" HBox.hgrow="NEVER">
                <Label text="Playlists">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>

                <ListView fx:id="lstPl" VBox.vgrow="ALWAYS" />

                <HBox spacing="5">
                    <Button onAction="#btnAddNewPl" prefWidth="65" text="New..." />
                    <Button onAction="#btnEditPl" prefWidth="65" text="Edit..." />
                    <Button onAction="#btnDeletePl" prefWidth="65" text="Delete" />
                </HBox>
            </VBox>

            <!-- Middle Section - Songs in Playlist -->
            <VBox prefWidth="350" spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Songs in Playlist">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>

                <TableView fx:id="tblSongsOnPl" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPlSongTitle" prefWidth="180" text="Title" />
                        <TableColumn fx:id="colPlSongArtist" prefWidth="120" text="Artist" />
                        <TableColumn fx:id="colPlSongTime" prefWidth="50" text="Time" />
                    </columns>
                </TableView>

                <HBox spacing="5">
                    <Button onAction="#btnMoveUp" prefWidth="40" text="↑" />
                    <Button onAction="#btnMoveDown" prefWidth="40" text="↓" />
                    <Button onAction="#btnRemoveFromPl" prefWidth="60" text="Delete" />
                </HBox>
            </VBox>

            <!-- Right Section - All Songs -->
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Songs">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>

                <!-- Filter Section -->
                <HBox spacing="5">
                    <TextField fx:id="txtSearch" promptText="Search by title or artist..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnSearch" onAction="#btnSearch" prefWidth="65" text="Filter" />
                </HBox>

                <TableView fx:id="tblSongs" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colSongTitle" prefWidth="150" text="Title" />
                        <TableColumn fx:id="colSongArtist" prefWidth="120" text="Artist" />
                        <TableColumn fx:id="colSongCat" prefWidth="100" text="Category" />
                        <TableColumn fx:id="colSongTime" prefWidth="50" text="Time" />
                    </columns>
                </TableView>

                <HBox spacing="5">
                    <Button onAction="#btnNewSong" prefWidth="65" text="New..." />
                    <Button onAction="#btnEditSong" prefWidth="65" text="Edit..." />
                    <Button onAction="#btnDeleteSong" prefWidth="65" text="Delete" />
                    <Button onAction="#btnAddToPL" prefWidth="65" text="← Add" />
               <Button mnemonicParsing="false" onAction="#btnYoutube" text="Youtube" />
                </HBox>
            </VBox>
        </HBox>
    </center>

    <!-- Bottom - Player Controls -->
    <bottom>
        <VBox spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label fx:id="lblPlaying" text="No song playing">
            <font>
               <Font name="System Bold" size="13.0" />
            </font></Label>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#btnPrevious" prefWidth="40" text="⏮" />
                <Button fx:id="btnPlayPause" onAction="#btnPlay" prefWidth="40" text="▶" />
                <Button onAction="#btnSkip" prefWidth="40" text="⏭" />
                <Button onAction="#btnStop" prefWidth="40" text="⏹" />

                <Slider fx:id="sldVolume" max="100" min="0" prefWidth="150" value="50" />
                <Label text="Volume" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="lblCurrentTime" minWidth="40" text="0:00" />
                <Slider fx:id="sldProgress" disable="true" HBox.hgrow="ALWAYS" />
                <Label fx:id="lblTotalTime" minWidth="40" text="0:00" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
